{
  "name": "single-line-css-formatter",
  "publisher": "dylanbeattie",
  "displayName": "Single Line CSS Formatter",
  "description": "Reformats CSS to leave single-property rules on one line",
  "version": "0.0.17",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "css",
        "extensions": [
          ".css"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html",
          ".htm"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release:patch": "npm version patch --force && npm run compile && vsce package && node -e \"require('child_process').execSync('code --install-extension single-line-css-formatter-' + require('./package.json').version + '.vsix', {stdio: 'inherit'})\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dylanbeattie/css-formatter-for-vs-code.git"
  }
}
